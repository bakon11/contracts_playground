    "websocket": "^1.0.35"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/websocket": "^1.0.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.7.1",
    "typescript": "^4.8.4"
  }
}
